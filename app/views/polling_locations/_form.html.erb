<div class="bg-white shadow-lg rounded-lg p-6">
  <%= form_with url: update_all_riding_polling_locations_path(@riding), method: :patch, local: true do %>
    <% @polling_locations.each do |polling_location| %>
      <div class="mb-8 border-b border-gray-200 pb-4">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Edit Polling Location: <%= polling_location.title %></h4>

        <!-- Error Messages for the Polling Location -->
        <% if polling_location.errors.any? %>
          <div class="bg-red-100 text-red-700 p-4 rounded-lg mb-4">
            <ul>
              <% polling_location.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <!-- Polling Location Details -->
        <div class="grid grid-cols-2 gap-4 mb-4">
          <div>
            <%= label_tag "polling_locations[#{polling_location.id}][title]", "Title", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "polling_locations[#{polling_location.id}][title]", polling_location.title, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Title" %>
          </div>

          <div>
            <%= label_tag "polling_locations[#{polling_location.id}][address]", "Address", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "polling_locations[#{polling_location.id}][address]", polling_location.address, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Address" %>
          </div>

          <div>
            <%= label_tag "polling_locations[#{polling_location.id}][city]", "City", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "polling_locations[#{polling_location.id}][city]", polling_location.city, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "City" %>
          </div>

          <div>
            <%= label_tag "polling_locations[#{polling_location.id}][postal_code]", "Postal Code", class: "block text-sm font-medium text-gray-700" %>
            <%= text_field_tag "polling_locations[#{polling_location.id}][postal_code]", polling_location.postal_code, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Postal Code" %>
          </div>
        </div>

        <!-- Poll Assignments -->
        <h5 class="text-lg font-medium text-gray-800 mb-2">Assigned Polls</h5>
        <div class="space-y-4">
          <% polling_location.polls.each do |poll| %>
            <div class="flex space-x-4">
              <div class="w-1/3">
                <%= label_tag "polling_locations[#{polling_location.id}][polls][#{poll.id}][number]", "Poll ##{poll.number}", class: "block text-sm font-medium text-gray-700" %>
                <%= text_field_tag "polling_locations[#{polling_location.id}][polls][#{poll.id}][number]", poll.number, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "Poll Number" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Add New Polling Location Section -->
    <div class="mt-8">
      <h4 class="text-lg font-semibold text-gray-800 mb-4">Add New Polling Location</h4>

      <div class="grid grid-cols-2 gap-4 mb-4">
        <div>
          <%= label_tag "new_polling_location[title]", "Title", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "new_polling_location[title]", "", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "New Polling Location Title" %>
        </div>

        <div>
          <%= label_tag "new_polling_location[address]", "Address", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "new_polling_location[address]", "", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "New Address" %>
        </div>

        <div>
          <%= label_tag "new_polling_location[city]", "City", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "new_polling_location[city]", "", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "New City" %>
        </div>

        <div>
          <%= label_tag "new_polling_location[postal_code]", "Postal Code", class: "block text-sm font-medium text-gray-700" %>
          <%= text_field_tag "new_polling_location[postal_code]", "", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", placeholder: "New Postal Code" %>
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="mt-4">
      <%= submit_tag "Save Changes", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
